<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="top|center_horizontal"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">


        <TextView
            android:id="@+id/create_account_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/create_account_title_text_view"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/fill_info_text_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/fill_info_text_view"
            android:textAlignment="center"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:layout_gravity="start|center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/register_fname_text_view"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:text="@string/register_fname_text_view"
            android:textColor="#F72585" />

        <EditText
            android:id="@+id/register_fname_edit_text"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="#EDEDE9"
            android:ems="10"
            android:hint="@string/register_fname_edit_text"
            android:inputType="text" />

        <TextView
            android:id="@+id/register_lname_text_view"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/register_lname_text_view"
            android:textColor="#F72585"/>

        <EditText
            android:id="@+id/register_lname_edit_text"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="text"
            android:background="#EDEDE9"
            android:hint="@string/register_lname_edit_text" />

        <TextView
            android:id="@+id/register_address_text_view"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/register_address_text_view"
            android:textColor="#F72585"/>

        <EditText
            android:id="@+id/register_address_edit_text"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="#EDEDE9"
            android:ems="10"
            android:hint="@string/register_address_edit_text"
            android:inputType="text"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout2"
        android:layout_width="350dp"
        android:layout_height="270dp"
        android:layout_gravity="end|center"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="35dp">

        <TextView
            android:id="@+id/register_email_text_view"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:text="@string/register_email_text_view"
            android:textColor="#F72585" />

        <EditText
            android:id="@+id/register_email_edit_text"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="text|textEmailAddress"
            android:background="#EDEDE9"
            android:hint="@string/register_email_edit_text" />

        <TextView
            android:id="@+id/register_password_text_view"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="@string/register_password_text_view"
            android:textColor="#F72585" />

        <EditText
            android:id="@+id/register_password_edit_text"
            android:layout_width="300dp"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:inputType="text|textPassword"
            android:hint="@string/register_password_edit_text"
            android:background="#EDEDE9" />

        <Button
            android:id="@+id/create_account_button"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="30dp"
            android:text="@string/create_account_button"
            style="@style/ButtonStyle" />
    </LinearLayout>

</FrameLayout>