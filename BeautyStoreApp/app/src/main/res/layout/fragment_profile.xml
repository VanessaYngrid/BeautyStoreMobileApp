<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- Título "My Account" -->
    <TextView
        android:id="@+id/my_account_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="60dp"
        android:text="@string/my_account_title"
        android:textColor="#EF476F"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- Card con información del usuario -->
    <FrameLayout
        android:id="@+id/card_user_info"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profile_card_title"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:padding="8dp"
                android:text="@string/profile_card_title"
                android:textColor="@color/pink"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">

                <TextView
                    android:id="@+id/user_fname_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="@string/user_fname_text_view"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/user_lname_text_view"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4dp"
                    android:text="@string/user_lname_text_view"
                    android:textColor="@color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/user_address_text_view"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:padding="4dp"
                android:text="@string/user_address_text_view"
                android:textColor="@color/black" />

        </LinearLayout>
    </FrameLayout>

    <!-- Card para "Update Profile" -->
    <FrameLayout
        android:id="@+id/card_update_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="260dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_update_profile_left"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/profileicon"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/update_profile_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/update_profile_card"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/update_profile_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrowright"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Card para "Contact Us" -->
    <FrameLayout
        android:id="@+id/card_stores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="340dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_stores_left"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/storeicon"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/contact_us_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/contact_us_card"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/contact_us_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrowright"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Card para "Logout" -->
    <FrameLayout
        android:id="@+id/card_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="420dp"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_logout_left"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/logouticon"
                android:layout_marginEnd="16dp" />

            <TextView
                android:id="@+id/logout_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="@string/logout_card"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/logout_button"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/arrowright"
                android:layout_marginStart="16dp" />
        </LinearLayout>
    </FrameLayout>



</FrameLayout>