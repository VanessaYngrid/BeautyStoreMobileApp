<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUsFragment">


    <TextView
        android:id="@+id/title_contact_us"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/title_contact_us"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#EF476F"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.118" />

    <!-- Icono y TextView para Phone Number -->

    <ImageView
        android:id="@+id/iconEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_email"
        app:layout_constraintEnd_toEndOf="@+id/title_contact_us"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/title_contact_us"
        app:layout_constraintTop_toBottomOf="@id/title_contact_us" />

    <TextView
        android:id="@+id/email_text_view"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/email_text_view"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/iconEmail"
        app:layout_constraintStart_toStartOf="@+id/iconEmail"
        app:layout_constraintTop_toBottomOf="@+id/iconEmail" />

    <ImageView
        android:id="@+id/iconPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:src="@drawable/icon_phone"
        app:layout_constraintEnd_toEndOf="@+id/email_text_view"
        app:layout_constraintStart_toStartOf="@+id/email_text_view"
        app:layout_constraintTop_toBottomOf="@+id/email_text_view" />

    <TextView
        android:id="@+id/phone_number_text_view"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/phone_number_text_view"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iconPhone"
        app:layout_constraintStart_toStartOf="@+id/iconPhone"
        app:layout_constraintTop_toBottomOf="@+id/iconPhone" />

    <!-- Icono y TextView para Address -->

    <ImageView
        android:id="@+id/iconAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_address"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@+id/phone_number_text_view"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="@+id/phone_number_text_view"
        app:layout_constraintTop_toBottomOf="@+id/phone_number_text_view" />

    <TextView
        android:id="@+id/address_text_view"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/address_text_view"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/iconAddress"
        app:layout_constraintStart_toStartOf="@+id/iconAddress"
        app:layout_constraintTop_toBottomOf="@+id/iconAddress" />

    <Button
        android:id="@+id/see_maps_button"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="@string/see_maps_button"
        style="@style/ButtonStyle"
        app:layout_constraintEnd_toEndOf="@+id/address_text_view"
        app:layout_constraintStart_toStartOf="@+id/address_text_view"
        app:layout_constraintTop_toBottomOf="@+id/address_text_view" />


</androidx.constraintlayout.widget.ConstraintLayout>